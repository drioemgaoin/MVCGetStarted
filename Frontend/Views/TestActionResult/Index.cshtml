@using (Html.BeginForm("TestActionResult", "TestActionResult", FormMethod.Post))
{
    <div style="margin: 50px">
        <p>Input a message and you will have your message as a xml result</p>
        <table>
            <tr>
                <td style="padding-right: 10px">Message</td>
                <td>@Html.TextBox("Message")</td>
            </tr>
            <tr>
                <td colspan="2" style="padding-top: 10px; text-align: center">
                    <input style="align-self: center" type="submit" value="Submit"/>
                </td>
            </tr>
        </table>
    </div>
}
